<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/light_gray"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- User Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/primary">

                <TextView
                    android:id="@+id/tv_user_initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/u"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="14dp">

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"
                    tools:text="User 1" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_hours_ago"
                    android:textSize="13sp"
                    android:textColor="@color/gray"
                    android:fontFamily="sans-serif"
                    tools:text="2 hours ago" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_favourite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeColor="@color/light_gray"
                app:strokeWidth="1dp"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/btn_favourites"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_favorite_border"
                    android:contentDescription="@string/add_to_favourites"
                    android:scaleType="centerInside"
                    />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:background="@color/light_gray" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            tools:text="Elegant design for a modern card layout" />

        <!-- Body -->
        <TextView
            android:id="@+id/tv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:alpha="0.9"
            tools:text="This section contains the main content of the card. The layout is neat, with clear separation between user info, content, and actions." />

        <!-- Action Row (optional, set visible as needed) -->
        <LinearLayout
            android:id="@+id/action_bar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_thumb_up"
                android:contentDescription="@string/like_post"
                android:layout_marginEnd="12dp"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/btn_comment"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_comment"
                android:contentDescription="@string/comment_on_post"
                android:layout_marginEnd="12dp"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_share"
                android:contentDescription="@string/share_post"
                app:tint="@color/gray" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_read_more"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/read_more"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="18dp"
                app:backgroundTint="@android:color/transparent"
                app:rippleColor="@color/primary"
                android:layout_gravity="center_vertical"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
