<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/light_gray"
    app:strokeWidth="0.5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Enhanced user avatar with gradient background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/user_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/purple_700"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_user_initial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/u"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </com.google.android.material.card.MaterialCardView>

        <!-- User info with better spacing -->
        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/user_1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="@id/user_avatar"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintEnd_toStartOf="@id/btn_favourite"
            tools:text="User 1" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:text="@string/_2_hours_ago"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/tv_user_id"
            app:layout_constraintStart_toEndOf="@id/user_avatar"
            app:layout_constraintEnd_toStartOf="@id/btn_favourite" />

        <!-- Enhanced favorite button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_favourite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="1dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="@id/user_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/user_avatar">

            <ImageView
                android:id="@+id/btn_favourites"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_favorite_border"
                android:contentDescription="@string/add_to_favourites"
                android:scaleType="centerInside"
                app:tint="@color/gray" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced title with better typography -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toBottomOf="@id/user_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="sunt aut facere repellat provident occaecati excepturi optio reprehenderit" />

        <!-- Enhanced body text -->
        <TextView
            android:id="@+id/tv_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:alpha="0.87"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/action_bar"
            tools:text="quia et suscipit\nsuscipit recusandae consequuntur expedita et cum\nreprehenderit molestiae ut ut quas totam\nnostrum rerum est autem sunt rem eveniet architecto" />

        <!-- Enhanced action bar -->
        <LinearLayout
            android:id="@+id/action_bar"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Action buttons with consistent styling -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/btn_like"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_thumb_up"
                        android:contentDescription="@string/like_post"
                        app:tint="@color/gray" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/btn_comment"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_comment"
                        android:contentDescription="@string/comment_on_post"
                        app:tint="@color/gray" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/btn_share"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_share"
                        android:contentDescription="@string/share_post"
                        app:tint="@color/gray" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Enhanced Read More button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_read_more"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/read_more"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                style="@style/Widget.Material3.Button.TextButton"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                app:cornerRadius="18dp"
                app:backgroundTint="@android:color/transparent"
                app:rippleColor="@color/primary"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
